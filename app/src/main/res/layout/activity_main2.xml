<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2"
    android:background="@drawable/bg_1_1">
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Eşleşme sayısı"
            android:textStyle="bold"
            android:textColor="#FEC606"/>


        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Hamle Sayıası"
            android:textStyle="bold"
            android:textColor="#FEC606"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"


        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <TextView
            android:id="@+id/eslesmeSayisiTextView"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textStyle="bold"
            android:textColor="#FEC606"/>

        <TextView
            android:id="@+id/hamleSayisiTextView"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textStyle="bold"
            android:textColor="#FEC606"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/skorTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Skor=0"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/timerTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        android:textColor="#FEC606"/>

    <TextView
        android:id="@+id/timerTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Süre:0"
        android:textColor="#FEC606"

        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.582" />

    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="419dp"
        android:layout_height="453dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="1.0">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/btn1"
                android:layout_width="100dp"
                android:layout_height="100dp"

                android:scaleType="fitCenter"
                android:tag="1"
                app:srcCompat="@drawable/kapali" />

            <ImageButton
                android:id="@+id/btn2"
                android:layout_width="100dp"
                android:layout_height="100dp"

                android:scaleType="fitCenter"
                android:tag="2"
                app:srcCompat="@drawable/kapali" />

            <ImageButton
                android:id="@+id/btn3"
                android:layout_width="100dp"
                android:layout_height="100dp"

                android:scaleType="fitCenter"
                android:tag="3"
                app:srcCompat="@drawable/kapali" />

            <ImageButton
                android:id="@+id/btn4"
                android:layout_width="100dp"
                android:layout_height="100dp"

                android:scaleType="fitCenter"
                android:tag="4"
                app:srcCompat="@drawable/kapali" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/btn5"
                android:layout_width="100dp"
                android:layout_height="100dp"

                android:scaleType="fitCenter"
                android:tag="5"
                app:srcCompat="@drawable/kapali" />

            <ImageButton
                android:id="@+id/btn6"
                android:layout_width="100dp"
                android:layout_height="100dp"

                android:scaleType="fitCenter"
                android:tag="6"
                app:srcCompat="@drawable/kapali" />

            <ImageButton
                android:id="@+id/btn7"
                android:layout_width="100dp"
                android:layout_height="100dp"

                android:scaleType="fitCenter"
                android:tag="7"
                app:srcCompat="@drawable/kapali" />

            <ImageButton
                android:id="@+id/btn8"
                android:layout_width="100dp"
                android:layout_height="100dp"

                android:scaleType="fitCenter"
                android:tag="8"
                app:srcCompat="@drawable/kapali" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/btn9"
                android:layout_width="100dp"
                android:layout_height="100dp"

                android:scaleType="fitCenter"
                android:tag="9"
                app:srcCompat="@drawable/kapali" />

            <ImageButton
                android:id="@+id/btn10"
                android:layout_width="100dp"
                android:layout_height="100dp"

                android:scaleType="fitCenter"
                android:tag="10"
                app:srcCompat="@drawable/kapali" />

            <ImageButton
                android:id="@+id/btn11"
                android:layout_width="100dp"
                android:layout_height="100dp"

                android:scaleType="fitCenter"
                android:tag="11"
                app:srcCompat="@drawable/kapali" />

            <ImageButton
                android:id="@+id/btn12"
                android:layout_width="100dp"
                android:layout_height="100dp"

                android:scaleType="fitCenter"
                android:tag="12"
                app:srcCompat="@drawable/kapali" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="123dp">

            <ImageButton
                android:id="@+id/btn13"
                android:layout_width="100dp"
                android:layout_height="100dp"

                android:scaleType="fitCenter"
                android:tag="13"
                app:srcCompat="@drawable/kapali" />

            <ImageButton
                android:id="@+id/btn14"
                android:layout_width="104dp"
                android:layout_height="match_parent"

                android:scaleType="fitCenter"
                android:tag="14"
                app:srcCompat="@drawable/kapali" />

            <ImageButton
                android:id="@+id/btn15"
                android:layout_width="100dp"
                android:layout_height="100dp"

                android:scaleType="fitCenter"
                android:tag="15"
                app:srcCompat="@drawable/kapali" />

            <ImageButton
                android:id="@+id/btn16"
                android:layout_width="100dp"
                android:layout_height="100dp"

                android:scaleType="fitCenter"
                android:tag="16"
                app:srcCompat="@drawable/kapali"
                tools:ignore="UsingOnClickInXml" />

        </TableRow>


    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>